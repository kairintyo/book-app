<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>User info</h2>
      <%= form_for(@user) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group has-icon">
            <label class="control-label sr-only">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
            <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        </div>
        <div class="form-group has-icon">
            <label class="control-label sr-only">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-lg btn-primary btn-block btn-base-1 mt-20 btn-primary" %>
      <% end %>
    </div>
  </div>
</div>