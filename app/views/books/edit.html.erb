<div class="container">
  <div class="row">
    <h2>Editing Book</h2>
    <%= form_for(@book) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group has-icon">
            <label class="control-label sr-only">Title</label>
            <%= f.text_field :title, autofocus: true, class:"form-control" %>
            <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only">Body</label>
          <%= f.text_area :body, autofocus: true, class:"form-control" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-primary" %>
    <% end %>
  </div>
</div>
